{"ast":null,"code":"import{useState,useCallback}from'react';export const useNotification=()=>{const[notification,setNotification]=useState(null);const showNotification=useCallback(function(message){let type=arguments.length>1&&arguments[1]!==undefined?arguments[1]:'info';setNotification({message,type});// Auto hide after 5 seconds\nsetTimeout(()=>{setNotification(null);},5000);},[]);const hideNotification=useCallback(()=>{setNotification(null);},[]);return{notification,showNotification,hideNotification};};","map":{"version":3,"names":["useState","useCallback","useNotification","notification","setNotification","showNotification","message","type","arguments","length","undefined","setTimeout","hideNotification"],"sources":["/Users/prakash/Documents/vibe-coding/src/hooks/useNotification.js"],"sourcesContent":["import { useState, useCallback } from 'react';\n\nexport const useNotification = () => {\n  const [notification, setNotification] = useState(null);\n\n  const showNotification = useCallback((message, type = 'info') => {\n    setNotification({ message, type });\n    \n    // Auto hide after 5 seconds\n    setTimeout(() => {\n      setNotification(null);\n    }, 5000);\n  }, []);\n\n  const hideNotification = useCallback(() => {\n    setNotification(null);\n  }, []);\n\n  return {\n    notification,\n    showNotification,\n    hideNotification\n  };\n}; "],"mappings":"AAAA,OAASA,QAAQ,CAAEC,WAAW,KAAQ,OAAO,CAE7C,MAAO,MAAM,CAAAC,eAAe,CAAGA,CAAA,GAAM,CACnC,KAAM,CAACC,YAAY,CAAEC,eAAe,CAAC,CAAGJ,QAAQ,CAAC,IAAI,CAAC,CAEtD,KAAM,CAAAK,gBAAgB,CAAGJ,WAAW,CAAC,SAACK,OAAO,CAAoB,IAAlB,CAAAC,IAAI,CAAAC,SAAA,CAAAC,MAAA,IAAAD,SAAA,MAAAE,SAAA,CAAAF,SAAA,IAAG,MAAM,CAC1DJ,eAAe,CAAC,CAAEE,OAAO,CAAEC,IAAK,CAAC,CAAC,CAElC;AACAI,UAAU,CAAC,IAAM,CACfP,eAAe,CAAC,IAAI,CAAC,CACvB,CAAC,CAAE,IAAI,CAAC,CACV,CAAC,CAAE,EAAE,CAAC,CAEN,KAAM,CAAAQ,gBAAgB,CAAGX,WAAW,CAAC,IAAM,CACzCG,eAAe,CAAC,IAAI,CAAC,CACvB,CAAC,CAAE,EAAE,CAAC,CAEN,MAAO,CACLD,YAAY,CACZE,gBAAgB,CAChBO,gBACF,CAAC,CACH,CAAC","ignoreList":